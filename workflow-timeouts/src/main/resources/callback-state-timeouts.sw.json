{
  "id": "callback_state_timeouts",
  "version": "1.0",
  "name": "Callback State Timeouts",
  "description": "Callback State Timeouts Test",
  "start": "PrintStartMessage",
  "events": [
    {
      "name": "callbackEvent",
      "source": "",
      "type": "callback_state_timeouts_event_type"
    }
  ],
  "errors": [
    {
      "name": "callbackError",
      "code": "java.lang.Exception"
    }
  ],
  "functions": [
    {
      "name": "callbackFunction",
      "metadata": {
        "interface": "org.kie.kogito.examples.HelloService",
        "operation": "helloJson",
        "type": "service"
      }
    },
    {
      "name": "systemOut",
      "type": "custom",
      "operation": "sysout"
    }
  ],
  "states": [
    {
      "name": "PrintStartMessage",
      "type": "operation",
      "actions": [
        {
          "name": "printSystemOut",
          "functionRef": {
            "refName": "systemOut",
            "arguments": {
              "message": "\"callback-state-timeouts: has started.\""
            }
          }
        }
      ],
      "transition": "CallbackState"
    },
    {
      "name": "CallbackState",
      "type": "callback",
      "action": {
        "name": "callbackAction",
        "functionRef": {
          "refName": "callbackFunction",
          "arguments": {
            "input" : "$.name"
          }
        }
      },
      "eventRef": "callbackEvent",
      "transition": "FinalizeSuccessful",
      "onErrors": [
        {
          "errorRef": "callbackError",
          "transition": "FinalizeWithError"
        }
      ],
      "timeouts": {
        "eventTimeout": "PT15S"
      }
    },
    {
      "name": "FinalizeSuccessful",
      "type": "inject",
      "data": {
        "lastExecutedState": "FinalizeSuccessful"
      },
      "transition": "PrintEndMessage"
    },
    {
      "name": "PrintEndMessage",
      "type": "operation",
      "actions": [
        {
          "name": "printSystemOut",
          "functionRef": {
            "refName": "systemOut",
            "arguments": {
              "message": "\"callback-state-timeouts: has finished. The callback state timeout has elapsed.\""
            }
          }
        }
      ],
      "end": true
    },
    {
      "name": "FinalizeWithError",
      "type": "inject",
      "data": {
        "lastExecutedState": "FinalizeWithError"
      },
      "end": true
    }
  ]
}